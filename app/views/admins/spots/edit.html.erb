<div class="container">
  <p class="fs-3 mt-3 ms-4">スポット編集</p>
  <div class="row">
  <%= form_with(model: @spot,url: admins_spot_path(@spot), local: true)  do |f| %>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-2 fs-5">スポット画像</div>
      <div class="col-5"><%= f.attachment_field :image %></div>
    </div>

    <div class=" row mt-3">
      <div class="col-3"></div>
      <div class="col-2 fs-5"><%= f.label :name, "スポット名" %></div>
      <div class="col-5"><%= f.text_field :name,  size: 39%>
    </div>

    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2 fs-5"><%= f.label :introduction, "スポット説明" %></div>
      <div class="col-5"><%= f.text_area :introduction,  size: "41x7" %></div>
    </div>

    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2 fs-5"><%= f.label:genres, "ジャンル" %></div>
      <div class="col-5"><%= f.collection_select(:genre_id, @genres, :id, :name) %></div>
    </div>
    <div class="d-grid gap-2 col-2 mx-auto mt-3">
      <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
    </div>

  <% end %>
  </div>
</div>




