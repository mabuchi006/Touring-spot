<div class="container item-index">

  <div class="row justify-content-center mt-4">
    <div class="col-10 row justify-content-between">
      <span class="bg-light font-weight-bold fs-5 col-2 text-center font-monospace pt-2">スポット一覧</span>
      <div class="row text-right">
      <%= link_to "+", new_admins_spot_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-10">
      <table class="table table-hover">
        <thead class="bg-light">
          <tr>
            <th>スポットID</th>
            <th>スポット名</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @spots.each do |spot| %>
          <tr>
            <td><%= spot.id %></td>
            <td><%= link_to "#{spot.name}", admins_spot_path(spot), :style => "color: black;text-decoration: underline" %></td>
            <td><%= spot.genre.name %></td>
           </tr>
           <% end %>
        </tbody>
      </table>
      <%= paginate @spots %>
    </div>
  </div>
</div>
