<div class='top-bg px-5 px-sm-0'>
<div class="container">
  <div class="row">
    <p class="col-1"></p>
    <p class="mt-4 fs-2 bg-light col-2 text-center">スポット詳細</p>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <div class="spot_image col-4">
      <%= attachment_image_tag @spot, :image, format: 'jpeg', fallback: "no_image.jpg",size:"350x263" %>
    </div>

    <div class="col-7 mt-3">
      <div class="row">
        <p class="col-2">スポット名</p>
        <p class="col-4 fs-5"><%=@spot.name %></p>
      </div>
      <div class="row">
        <p class="col-2">スポット説明</p>
        <p class="col-4 fs-5"><%= @spot.introduction %></p>
      </div>
       <div class="row">
        <p class="col-2">ジャンル</p>
        <p class="col-4 fs-5"><%= @spot.genre.name %></p>
      </div>
      <div class="row position-relative mt-4">
      <%= link_to "編集する", edit_admins_spot_path(@spot),class:"btn btn-success col-2 position-absolute top-50 start-50 translate-middle"%>
      </div>
    </div>
  </div>
</div>
</div>