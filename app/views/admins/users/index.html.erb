<div class="container customer-index">
  <div class="row mt-4">
    <div class="row col-8">
      <p class="col-2"></p>
      <p class="col-3 fs-5 bg-light text-center">ユーザー一覧</p>
    </div>

    <div class="row col-8 mx-auto">
      <table class='table table-hover table-inverse '>
        <thead class="bg-light">
          <tr>
            <th>ユーザーID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr valign="middle" class="lh-lg">
              <td><%= user.id %></td>
              <td><%= link_to user.last_name + "" + user.first_name,admins_user_path(user.id),:style => "color: black;text-decoration: underline" %></td>
              <td><%= user.email %></td>
              <% if user.is_deleted == true%>
              <td class="fw-light" style="color: gray">退会</td>
              <% else %>
              <td class="fw-bold" style="color:green">有効</td>
              <% end %>
            </tr>
          <% end %>
          <%= paginate @users %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>