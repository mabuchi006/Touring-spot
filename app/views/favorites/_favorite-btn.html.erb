<% if spot.favorited_by?(current_user) %>
  <%= link_to spot.favorites.count.to_s+"♥", spot_favorites_path(spot), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to spot.favorites.count.to_s+"♥", spot_favorites_path(spot), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>

