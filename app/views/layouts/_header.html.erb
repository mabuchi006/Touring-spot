<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">

        <nav class="navbar navbar-expand navbar-dark bg-secondary fixed-top">
        <div class="navbar mt-4 nav-left" id="navbarToggleExternalContent">
          <% if user_signed_in? %>
            <%= link_to 'My Page', user_path(current_user), class: "btn btn-primary" %>
            <%= link_to ' Spot ',spots_path, class: "btn btn-primary" %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
            <%= form_with url: search_path, method: :get, class: "search-form", local: true do |f| %>
              <%= f.text_field :content, size: "18" %>
              <%= f.select :model, options_for_select({ "スポット" => "spot"}) %>
              <%= f.select :method, options_for_select({ "完全に一致" => "perfect", "部分一致" => "partical"}) %>
              <%= f.submit '検索' %>
            <% end %>
          <% elsif admin_signed_in? %>
            <%= link_to ' スポット ', admins_spots_path, class: "btn btn-primary" %>
            <%= link_to ' メンバー ', admins_users_path, class: "btn btn-primary " %>
            <%= link_to ' ジャンル一覧 ', admins_genres_path, class: "btn btn-primary" %>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-primary" %>
            <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= f.text_field :content, size: "17"  %>
              <%= f.select :model, options_for_select({ "スポット" => "spot"}) %>
              <%= f.select :method, options_for_select({ "完全に一致" => "perfect", "部分一致" => "partical"}) %>
              <%= f.submit '検索' %>
            <% end %>
          <% else %>
            <%= link_to '　 Home　 ',root_path,class: "btn btn-primary" %>
            <%= link_to '　 About　 ',about_path,class: "btn btn-primary" %>
            <%= link_to ' Spot ',spots_path,class: "btn btn-primary" %>
            <%= link_to ' Signup ', new_user_registration_path,class: "btn btn-primary" %>
            <%= link_to ' Login ', new_user_session_path,class: "btn btn-primary" %>
            <%= form_with url: search_path, method: :get, class: "search-form", local: true do |f| %>
              <%= f.text_field :content %>
              <%= f.select :model, options_for_select({ "スポット" => "spot"}) %>
              <%= f.select :method, options_for_select({ "完全に一致" => "perfect", "部分一致" => "partical"}) %>
              <%= f.submit '検索' %>

            <% end %>
          <% end %>
        </div>
    </div>
  </nav>
</header>