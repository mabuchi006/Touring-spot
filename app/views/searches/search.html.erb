<% if @model == "spot" %>
<div class="d-flex justify-content-end">
    <h2>スポット"<%= @content %>"(全<%= @records.count %>件)</h2>
</div>
<div class="container">

  <div class="row justify-content-center mt-4">
    <div class="col-10 row justify-content-between">

      <div class="fs-2 col-2"></div>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-10">
    <% @records.each do |spot| %>
        <ul>
        <hr class="cp_hr01" />
          <%= link_to spot_path(spot) do %>
          <%= attachment_image_tag spot, :image,class:'spot_visual',size: "400x200" %>
          <% end %>
          <div class="spot_text">
          <p class="spot_name">スポット名：<%= spot.name %></p>
          <%= link_to "スポット詳細" ,spot_path(spot),class:"btn btn-primary" %>
          </div>
        </ul>

    <% end %>
    </div>
  </div>
</div>

<% elsif @model == "genre" %>
<div class="text-center item-show">
    <h2>ジャンル"<%= @content %>"(全<%= @records_genre.count %>件)</h2>
</div>
<div class="container">

  <div class="row justify-content-center mt-4">
    <div class="col-10 row justify-content-between">

      <div class="fs-2 col-2"></div>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-10">
      <% @records_genre.each do |spot| %>
        <ul>
        <hr class="cp_hr01" />
        <li class="spot_icon">
          <%= link_to spot_path(spot) do %>
          <%= attachment_image_tag spot, :image,class:'spot_visual',size: "200x100" %>
          <% end %>
          <div class="spot_text">
          <p class="spot_name">スポット名：<%= spot.name %></p>
          <%= link_to "スポット詳細" ,spot_path(spot),class:'btn btn-signup  mt-4' %>
          </div>

        </li>
        </ul>

      <% end %>

    </div>
  </div>
</div>

    </div>
    </div>
  </div>
<% end %>