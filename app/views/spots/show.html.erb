<div class='top-bg px-5 px-sm-0'>
<div class='container px-5 px-sm-0 spot-show'>
  <div class='row'>
      <div class='col-md-7'>

      </div>
      <div class='col-md-11 offset-md-1'>
        <div class="spot_new">
            <div class="spot_photo">
              <%= attachment_image_tag @spot, :image,class:'spot_visual',size: "200x100" %>
            </div>
            <div class="spot_text spot_detail_text">
              <h2><%= @spot.name %></h2>
              <p><%= @spot.introduction %></p>
            </div>
            <div class="favorite-btn"><%= render "favorites/favorite-btn", spot: @spot %></div>
              <td>コメント数: <%= @spot.spot_comments.count %></td>
         <%= render 'spot_comments/index', spot: @spot,spot_comments: @spot_comment%>
        </div>
      </div>
   </div>
</div>
</div>